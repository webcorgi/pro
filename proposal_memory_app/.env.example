# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/proposal_memory
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=proposal_memory

# File Storage
UPLOAD_DIR=./uploads
THUMBNAIL_DIR=./uploads/thumbnails
MAX_FILE_SIZE_IMAGE=10485760  # 10MB in bytes
MAX_FILE_SIZE_VIDEO=104857600 # 100MB in bytes

# Map API Configuration
MAP_API_KEY=your_map_api_key_here
MAP_PROVIDER=leaflet  # or 'google'
MAP_DEFAULT_ZOOM=15

# API Configuration
API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_key_here

# PWA Configuration
NEXT_PUBLIC_APP_NAME=Proposal Memory App
NEXT_PUBLIC_APP_SHORT_NAME=Proposal
NEXT_PUBLIC_APP_DESCRIPTION=프로포즈 당일의 소중한 순간들을 기록하고 보존하는 PWA
PUBLIC_URL=http://localhost:3000
SERVICE_WORKER_VERSION=v1

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_BACKGROUND_SYNC=true

# Monitoring (Optional)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Environment
NODE_ENV=development
